<Button fx:id="btnReset" layoutX="552.0" layoutY="540.0" onAction="#resetForm" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand;" text="Reset" />

