<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #005c8a, #003d5b);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <ImageView fitHeight="600.0" fitWidth="900.0" opacity="0.18" pickOnBounds="true">
      <image>
         <Image url="@Stu_Background.jpg" />
      </image>
   </ImageView>
    
    <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="900.0" style="-fx-background-color: #003d5b;">
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 10;" text="Academic Records" />
    </HBox>

    <VBox alignment="CENTER_LEFT" layoutX="222.0" layoutY="90.0" prefHeight="450.0" prefWidth="650.0" spacing="15">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Your Academic Records" />
        
              <TableView fx:id="academicRecordsTable" prefHeight="350.0" prefWidth="600.0" style="-fx-background-color: #e3f2fd; -fx-background-radius: 10;">
            <columns>
                <TableColumn fx:id="colCourseID" prefWidth="100.0" text="Course ID" />
                <TableColumn fx:id="colCourseName" prefWidth="250.0" text="Course Name" />
                <TableColumn fx:id="colCredits" prefWidth="80.0" text="Credits" />
                <TableColumn fx:id="colGrade" prefWidth="100.0" text="Grade" />
                <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
            </columns>
        </TableView>
    </VBox>
   <VBox alignment="CENTER" layoutX="14.0" layoutY="90.0" prefWidth="200.0" spacing="15" style="-fx-background-color: #004f70; -fx-background-radius: 10; -fx-padding: 20;">
      <children>
         <Button prefHeight="30.0" prefWidth="177.0" style="-fx-background-color: #005c8a; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand;" text="Home " />
         <Button prefHeight="30.0" prefWidth="177.0" style="-fx-background-color: #005c8a; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand;" text="Profile" />
         <Button prefHeight="30.0" prefWidth="210.0" style="-fx-background-color: #005c8a; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand;" text="View Courses" />
         <Button prefHeight="30.0" prefWidth="180.0" style="-fx-background-color: #005c8a; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand;" text="Register for Courses" />
         <Button prefHeight="30.0" prefWidth="236.0" style="-fx-background-color: #0084b4; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand;" text="View Academic Record" />
         <Button style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand;" text="Logout" />
      </children>
   </VBox>
</AnchorPane>
