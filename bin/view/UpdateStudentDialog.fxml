<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UpdateStudentDialogController">
    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Date of Birth (yyyy-MM-dd):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtDOB" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="txtAddress" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="txtPhoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    </GridPane>

    <Button fx:id="btnUpdate" text="Update" style="-fx-background-color: #005c8a; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand;" />
</VBox>